{
  "tsserver.npm": "/usr/bin/npm",
  "tsserver.orgnizeImportOnSave": true,

  "eslint.autoFixOnSave": true,
  "eslint.filetypes": ["javascript", "javascriptreact", "typescript", "typescriptreact"],

  "snippets.extends": {
    "javascriptreact": ["javascript"],
    "typescriptreact": ["typescript"]
  },

  "jest.enabled": true,
  "jest.pathToJest": "./node_modules/.bin/jest",
  "jest.pathToConfig": "./package.json",
  "suggest.noselect": false,

  "languageserver": {
    "kotlin": {
      "command": "kotlin-language-server",
      "filetypes": ["kotlin"]
    },

    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"]
    },

    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh", "bash"],
      "ignoredRootPaths": ["~"]
    },

    "nim": {
      "command": "~/programming/nim/nimlsp/nimlsp",
      // "command": "nimlangserver",
      "filetypes": ["nim"]
    },

    "godot": {
      "host": "127.0.0.1",
      "filetypes": ["gd", "gdscript3"],
      "port": 6008
    }
  },

  "java.format.settings.url": "/home/avahe/.config/coc/extensions/node_modules/redhat.java/eclipse-formatter.xml",

  "diagnostic-languageserver.filetypes": {
    "sh": "shellcheck"
  }

}
